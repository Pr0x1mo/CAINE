<Window x:Class="CAINE.MLDashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CAINE ML Dashboard" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E1E">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <DockPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="CAINE Machine Learning Dashboard" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#4A9EFF" DockPanel.Dock="Left"/>
            <Button Name="RefreshButton" Content="Refresh" 
                    Width="80" Height="30" Click="RefreshButton_Click"
                    Background="#2D2D30" Foreground="White" DockPanel.Dock="Right"/>
        </DockPanel>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- Model Performance Section -->
                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                        CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Model Performance" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#4A9EFF" Margin="0,0,0,10"/>
                        <TextBlock Name="ModelPerformanceText" 
                                   Foreground="White" TextWrapping="Wrap"
                                   FontFamily="Consolas" FontSize="11"
                                   Text="Loading model performance..."/>
                    </StackPanel>
                </Border>

                <!-- Anomaly Detection Section -->
                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                        CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Anomaly Detection" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#FF6B47" Margin="0,0,0,10"/>
                        <TextBlock Name="AnomalyText" 
                                   Foreground="White" TextWrapping="Wrap"
                                   FontFamily="Consolas" FontSize="11"
                                   Text="Loading anomaly analysis..."/>
                    </StackPanel>
                </Border>

                <!-- Cluster Analysis Section -->
                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                        CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Error Clusters" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#4CAF50" Margin="0,0,0,10"/>
                        <TextBlock Name="ClusterText" 
                                   Foreground="White" TextWrapping="Wrap"
                                   FontFamily="Consolas" FontSize="11"
                                   Text="Loading cluster analysis..."/>
                    </StackPanel>
                </Border>

                <!-- Trend Predictions Section -->
                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                        CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Trend Predictions" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#FF9800" Margin="0,0,0,10"/>
                        <TextBlock Name="TrendText" 
                                   Foreground="White" TextWrapping="Wrap"
                                   FontFamily="Consolas" FontSize="11"
                                   Text="Loading trend analysis..."/>
                    </StackPanel>
                </Border>

                <!-- Feature Importance Section -->
                <Border Background="#2D2D30" BorderBrush="#3E3E42" BorderThickness="1" 
                        CornerRadius="5" Margin="0,0,0,15" Padding="15">
                    <StackPanel>
                        <TextBlock Text="Feature Importance Analysis" 
                                   FontSize="16" FontWeight="Bold" 
                                   Foreground="#9C27B0" Margin="0,0,0,10"/>
                        <TextBlock Name="FeatureText" 
                                   Foreground="White" TextWrapping="Wrap"
                                   FontFamily="Consolas" FontSize="11"
                                   Text="Loading feature analysis..."/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <DockPanel Grid.Row="2" Margin="0,15,0,0">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <ProgressBar Name="ProgressIndicator" Width="150" Height="4" 
                             Background="#3E3E42" Foreground="#4A9EFF"/>
                <TextBlock Name="StatusText" Text="Ready" 
                           Foreground="#CCCCCC" Margin="10,0,0,0" VerticalAlignment="Center"/>
            </StackPanel>
            <Button Name="CloseButton" Content="Close" 
                    Width="80" Height="30" Click="CloseButton_Click"
                    Background="#2D2D30" Foreground="White" DockPanel.Dock="Right"/>
        </DockPanel>
    </Grid>
</Window>